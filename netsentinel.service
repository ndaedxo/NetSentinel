[Unit]
Description=NetSentinel AI-Powered Detection System
After=syslog.target
After=network-online.target

[Service]
User=root
Type=oneshot
RemainAfterExit=yes
Restart=always
ExecStart=<VIRTUAL_ENV_PATH>/bin/netsentinel --start
ExecStop=<VIRTUAL_ENV_PATH>/bin/netsentinel --stop

[Install]
WantedBy=multi-user.target
